model FunnelStepProgress {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  visitId   String
  stepId    String

  // Progress tracking
  status          FunnelStepStatus @default(VIEWED)
  enteredAt       DateTime         @default(now())
  completedAt     DateTime?
